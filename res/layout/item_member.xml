<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small" >

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="@dimen/member_image_size_item_list"
        android:layout_height="@dimen/member_image_size_item_list"
        android:layout_marginRight="@dimen/margin_small"
        android:contentDescription="@string/member_picture" />
    <!-- android:scaleType="fitCenter" -->
    <!-- android:adjustViewBounds="true" -->

    <TextView
        android:id="@+id/member_title"
        style="@style/ListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/member_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/member_subtitle"
        style="@style/ListItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/member_title"
        android:layout_below="@id/member_title"
        android:ellipsize="end"
        android:textIsSelectable="false" />

</merge>